# Ralph Wiggum Loop Configuration
# Copy this file to .ralphrc in your project root and customize

# Claude model to use: opus (default), sonnet (faster), haiku (fastest)
CLAUDE_MODEL=opus

# Maximum API calls per hour (rate limiting)
MAX_RATE_PER_HOUR=100

# Circuit breaker: stop after N iterations with identical errors
CIRCUIT_BREAKER_THRESHOLD=5

# Circuit breaker: stop after N iterations with no progress
NO_PROGRESS_THRESHOLD=3

# Automatically push after commits
ENABLE_GIT_PUSH=false

# Enable verbose/debug logging
VERBOSE=false

# Seconds to sleep between iterations
SLEEP_BETWEEN_ITERATIONS=5

# Continuous mode: run forever (ignore EXIT_SIGNAL)
# Set to true for unattended operation, false to stop when complete
CONTINUOUS_MODE=true
